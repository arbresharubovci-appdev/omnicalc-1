<h1>Payment Results</h1>


<dl>
  <dt>APR</dt>
  <dd><%= number_to_percentage(@apr, precision: 4)%></dd>

  <dt> Number of years</dt>
  <dd><%=@years%></dd>

  <dt>Principal</dt>
  <dd><%=@principal.to_s(:currency)%></dd>

  <dt>Payment</dt>
  <dd><%=@monthly_payment.round(4).to_s(:currency)%></dd>
</dl>

